<header class="header">
	<div>
		{{> logo}}
	</div>

	<div class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</div>
</header>


<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}


	{{#with form}}
	<form class="form">
		<h2 class="form_title">{{title}}</h2>

		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form_input_({{id}})">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}

</main>

<div class="updates">
	{{#with updates}}
	<h1 class="updates_title">{{title}}</h1>
	{{#each list}}
	<div class="square"></div>
	<strong class="nickname">@{{nickname}}</strong>
	<p class="updates_description">{{description}}</p>
	{{/each}}
	<a href="{{show_all.url}}" class="show_all">{{show_all.text}}</a>
	{{/with}}
</div>


<div class="expirience">
	{{#with expirience}}
	<h1 class="expirience_title">{{title}}</h1>
	<div class="badge_h">{{badge}}</div>
	{{#each list}}
	<div class="expirience_card">
		<strong class="expirience_name">{{name}}</strong>
		<p class="expirience_details">{{details}}</p>
	</div>
	{{/each}}
	{{/with}}
</div>



<footer class="footer">
	<div class="col-3">
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>